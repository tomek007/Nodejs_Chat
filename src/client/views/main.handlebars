<h1 style="text-align: center">GeoChat</h1>
<div id="main" style="display: flex; flex-direction: row; width: 100%; height: 100%;">
  <div id="users-list" style="width: 20%; min-width: 150px; margin: 20px; border: 1px solid black; border-radius: 5px;">
    <!-- Connect to the template using Handlebars -->
    {{> chat-list }}
  </div>
  <div id="messages" style="display: flex; flex-grow: 1; flex-direction: column; margin: 20px;">
    <div id="message-window" style="flex-grow:1">
      <!-- Connect to the template using Handlebars -->
      {{> message-view }}
    </div>
    <div id="message-inputs" style="display: flex;">
      <!-- Connect to the template using Handlebars -->
      {{> input }}
    </div>
  </div>
</div>
