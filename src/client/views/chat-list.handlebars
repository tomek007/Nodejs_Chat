<div id="chat-list" style="margin: 20px; display: flex; flex-direction: column;">
  <div style="text-align: center;">
    <a href="#" style="font-weight: bold" onclick="join('public')">Public chat</a>
  </div>
  <div style="justify-self: center; text-align: center; margin: 30px 0 20px">
    -------------
  </div>
  <ul style="list-style: none; padding: 0; margin: 0;">
    {{#each this}}
      <li onclick="join('{{this.id}}')">
        <a id="join-private-{{this.id}}" href="#">{{this.name}}</a>
      </li>
    {{/each}}
  </ul>
</div>
